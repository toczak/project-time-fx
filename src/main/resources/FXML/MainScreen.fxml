<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.potoczak.controllers.MainController">
   <center>
       <GridPane alignment="TOP_CENTER" prefHeight="258.0" prefWidth="597.0">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="94.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
           </rowConstraints>
           <TableView fx:id="table" fixedCellSize="0.0" prefHeight="258.0" prefWidth="597.0" GridPane.hgrow="ALWAYS"
                      GridPane.vgrow="ALWAYS">
             <columns>
                 <TableColumn fx:id="title" prefWidth="106.0" text="Title"/>
                 <TableColumn fx:id="progress" prefWidth="281.0" text="Progress"/>
                 <TableColumn fx:id="time" minWidth="0.0" prefWidth="121.0" text="Time"/>
                 <TableColumn fx:id="action" prefWidth="88.0" text="Action"/>
             </columns>
             <columnResizePolicy>
                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
             </columnResizePolicy>
           </TableView>
       </GridPane>
   </center>
   <top>
       <MenuBar prefHeight="18.0" prefWidth="597.0" BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Import from file" />
            <MenuItem mnemonicParsing="false" text="Export to file" />
               <MenuItem mnemonicParsing="false" text="Close" />
           </Menu>
           <Menu mnemonicParsing="false" text="Edit">
               <MenuItem mnemonicParsing="false" onAction="#editAdd" text="Add" />
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" text="About" />
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
